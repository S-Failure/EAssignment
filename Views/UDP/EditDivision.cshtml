@model Division

@{
    ViewBag.Title = "Edit Division";
}

<h1>Edit Division</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="DivisionId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DivisionId" readonly class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DivisionName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DivisionName" class="form-control">
            <span asp-validation-for="DivisionName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListDivisions" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>