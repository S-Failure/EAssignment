@model CreateSubjectViewModel

@{
    ViewBag.Title = "Create New Subject";
}

<h1>Create New Subject</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubjectName"></label>
                <input asp-for="SubjectName" class="form-control" />
                <span asp-validation-for="SubjectName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClassId"></label>
                <select asp-for="ClassId" asp-items="@(new SelectList(@ViewBag.ListofClasses,"ClassId", "ClassName"))" class="form-control">
                </select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>

            <button style="width:auto" type="submit" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Create Subject</button>
            <a asp-controller="UDP" asp-action="ListSubjects" class="btn btn-danger"><i class="fa fa-home">&nbsp;Cancel</i></a>
        </form>
    </div>
</div>