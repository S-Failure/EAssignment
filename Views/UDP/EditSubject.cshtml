@model Subject

@{
    ViewBag.Title = "Edit Subject";
}

<h1>Edit Subject</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="SubjectId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SubjectId" readonly class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SubjectName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SubjectName" class="form-control">
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ClassId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="ClassId" class="custom-select mr-sm-2"
                    asp-items="@(new SelectList(@ViewBag.ListofClasses,"ClassId", "ClassName"))">
            </select>
            <span asp-validation-for="ClassId" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListSubjects" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>