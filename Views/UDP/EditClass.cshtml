@model Class

@{
    ViewBag.Title = "Edit Class";
}

<h1>Edit Class</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="ClassId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ClassId" readonly class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ClassName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ClassName" class="form-control">
            <span asp-validation-for="ClassName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListClasses" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>