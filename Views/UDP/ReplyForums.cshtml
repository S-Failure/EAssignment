@model ReplyForumsViewModel

@{
    ViewBag.Title = "Enquiry Details";
}

<form method="post">
    <div class="row justify-content-center m-3">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h1>Ask your Forum here...</h1>
                </div>

                <div class="card-body text-center">
                    <h4 hidden>@Model.ClassId</h4>
                    <h4 hidden>@Model.ForumId</h4>
                    <h4 hidden>@Model.SubjectId</h4>
                    <h4 hidden>@Model.DivisionId</h4>
                    <h4 hidden>@Model.UserId</h4>
                    <input hidden asp-for="ClassId" />
                    <input hidden asp-for="ForumId" />
                    <input hidden asp-for="SubjectId" />
                    <input hidden asp-for="DivisionId" />
                    <input hidden asp-for="UserId" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group col-md-12">
                        <label asp-for="ForumData" class="col-sm-2 col-form-label"></label>
                        <textarea asp-for="ForumData" class="form-control" placeholder="Forum ask here"></textarea>
                        <span asp-validation-for="ForumData" class="text-danger"></span>
                    </div>


                </div>
                <div class="card-footer text-center">
                    <a asp-controller="UDP" asp-action="Forums"
                       class="btn btn-primary">Back</a>

                    <button type="submit" class="btn btn-primary">Reply on forum</button>

                </div>
            </div>
        </div>
    </div>
</form>
