@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <a asp-action="RegisterUser" asp-controller="Administration"
       class="btn btn-primary mb-3" style="width:auto">
        Add new user
    </a>

    <table class="table table-striped table-bordered table-hover table-condensed" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        @foreach (var user in Model)
        {
            <tbody>
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm"><i class="fa fa-edit">&nbsp;Edit</i></a>
                    </td>
                    <td>
                        <a asp-controller="Administration" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash">&nbsp;Delete</i></a>
                    </td>
                </tr>
            </tbody>

        }
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Administration" asp-action="RegisterUser">
                Add new user
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}