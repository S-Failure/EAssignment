@model FilesSettingViewModel

@{
    ViewBag.Title = "Files Setting";
}

<h1>Files Setting</h1>

<form method="post" class="mt-3" asp-controller="Files" asp-action="FilesSetting" role="form">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" readonly class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ClassId" name="ClassId" id="ClassId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="ClassId" class="custom-select mr-sm-2" id="ClassId" name="ClassId"
                    asp-items="@(new SelectList(ViewBag.ListofClasses, "ClassId", "ClassName"))">
            </select>
            <span asp-validation-for="ClassId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SubjectId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="SubjectId" name="SubjectId" id="SubjectId" class="custom-select mr-sm-2"
                    asp-items="@(new SelectList(ViewBag.ListOfSubjects, "SubjectId", "SubjectName"))">
            </select>
            <span asp-validation-for="SubjectId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DivisionId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="DivisionId" class="custom-select mr-sm-2"
                    asp-items="@(new SelectList(ViewBag.ListofDivisions, "DivisionId", "DivisionName"))">
            </select>
            <span asp-validation-for="DivisionId" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
