@model IEnumerable<Submit>

@{
    ViewBag.Title = "Submitted";
}

<h1>Submitted Files</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Submit"
       asp-controller="Files">Submit Files</a>

    <table class="table table-striped table-bordered table-hover table-condensed" http-equiv="refresh" content="1">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">File Name</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var submit in Model)
                {
                    <tr>
                        <td>
                            @submit.SubmitName
                        </td>
                        <td>
                            <a asp-controller="Files" asp-action="EditSubmit" asp-route-id="@submit.EncryptedId" class="btn btn-primary btn-sm"><i class="fa fa-edit">&nbsp;Edit</i></a>
                        </td>
                        <td>
                            <a asp-controller="Files" asp-action="DeleteSubmits" asp-route-id="@submit.EncryptedId" class="btn btn-danger btn-sm"><i class="fa fa-trash">&nbsp;Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No File Submitted
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to Submit files
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Files" asp-action="Submit">
                Submit File
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}