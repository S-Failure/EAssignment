@model IEnumerable<Submit>

@{
    ViewBag.Title = "All Submitted";
}

<h1>Submitted Files</h1>

@if (Model.Any()) 
{ 

    <table class="table table-striped table-bordered table-hover table-condensed" http-equiv="refresh" content="1">
        <thead class="thead-dark">
            <tr>
                <th scope="col">File Name</th>
                <th scope="col">Download</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var submit in Model)
            {
                <tr>
                    <td>
                        @submit.SubmitName
                    </td>
                    <td>
                        <form method="post" enctype="multipart/form-data" asp-controller="Files" asp-action="DownloadSubmit" asp-route-id="@submit.EncryptedId">
                            <button type="submit" class="btn-primary">
                                <a class="btn btn-primary btn-sm"><i class="fa fa-download">&nbsp;Download</i></a>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            All Submitted Files
        </div>
        <div class="card-body">
            <h5 class="card-title">
                No file Submitted yet.
            </h5>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}