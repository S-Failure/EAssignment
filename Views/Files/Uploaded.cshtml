@model IEnumerable<Assignment>

@{
    ViewBag.Title = "Uploaded";
}

<h1>Uploaded Files</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Upload"
       asp-controller="Files">Upload Files</a>

    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead class="thead-dark">
            <tr>
                <th scope="col">File Name</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model)
            {
                <tr>
                    <td>
                        @assignment.AssignmentName
                    </td>
                    <td>
                        <a asp-controller="Files" asp-action="EditUpload" asp-route-id="@assignment.EncryptedId" class="btn btn-primary btn-sm"><i class="fa fa-edit">&nbsp;Edit</i></a>
                    </td>
                    <td>
                        <a asp-controller="Files" asp-action="DeleteUpload" asp-route-id="@assignment.EncryptedId" class="btn btn-danger btn-sm"><i class="fa fa-trash">&nbsp;Delete</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No File Uploaded
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to Upload files
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Files" asp-action="Upload">
                Upload File
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}