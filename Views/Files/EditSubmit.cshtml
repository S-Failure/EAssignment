@model EditSubmitViewModel
@{
    ViewData["Title"] = "Edit Submit";
}

<div class="container">
    <form enctype="multipart/form-data" method="post" class="mt-3">
        <h2>Submit Assignment</h2>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-row">
            <input hidden asp-for="SubmitId" />
            <input hidden asp-for="ClassId" />
            <input hidden asp-for="SubjectId" />
            <input hidden asp-for="DivisionId" />
            <input hidden asp-for="SubmitName" />
            <input hidden asp-for="UserId" />
            <input hidden asp-for="ExistingPath" />
            <label asp-for="Path" class="col-sm-2 col-form-label"></label>
            <div class="col-md-12">
                <div class="custom-file">
                    <input multiple asp-for="Path" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File...</label>
                </div>
                <span asp-validation-for="Path" class="text-danger"></span>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-success"><i class="fa fa-user-plus" aria-hidden="true">&nbsp;Submit</i></button>
        <a asp-controller="Files" asp-action="Submitted" class="btn btn-danger"><i class="fa fa-home" aria-hidden="true"></i>&nbsp;Cancel</a>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}