@model ReplyEnquiryViewModel

@{
    ViewBag.Title = "Enquiry Details";
}

<form method="post">
    <div class="row justify-content-center m-3">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h1>Reply To : @Model.Name</h1>
                    <input hidden asp-for="Name" />
                </div>

                <div class="card-body text-center">
                    <h4>Email : @Model.Email</h4>
                    <h4>Subject : @Model.Subject</h4>
                    <input hidden asp-for="Email" />
                    <input hidden asp-for="Subject" />

                    <div class="form-group col-md-12">
                        <label asp-for="Reply" class="col-sm-2 col-form-label"></label>
                        <textarea asp-for="Reply" class="form-control" placeholder="Reply here"></textarea>
                        <span asp-validation-for="Reply" class="text-danger"></span>
                    </div>


                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="AllEnquiry"
                       class="btn btn-primary">Back</a>

                    <button type="submit" class="btn btn-primary">Send Reply</button>

                </div>
            </div>
        </div>
    </div>
</form>
