@model IEnumerable<Enquiry>

@{
    ViewBag.Title = "All Equiry";
}

@if (Model.Any())
{
    <div class="card-deck">
        @foreach (var enquiry in Model)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@enquiry.Name</h3>
                </div>
                <p class="card-text">Email   : @enquiry.Email</p>
                <p class="card-text">Subject : @enquiry.Subject</p>
                <p class="card-text">Message : @enquiry.Message</p>

                @if (enquiry.Reply != null)
                {
                    <p class="card-text">Reply : @enquiry.Reply</p>
                }

                @*<img class="card-img-top imageThumbnail" src="@photoPath"
                    asp-append-version="true" />*@

                <div class="card-footer text-center">
                    @*<a asp-controller="home" asp-action="ReplyEnquiry"
                       asp-route-id="@enquiry.EncryptedId"
                       class="btn btn-primary m-1">Reply</a>*@
                    <a asp-action="ReplyEnquiry" asp-controller="home"
                        asp-route-id="@enquiry.ID"
                        class="btn btn-primary m-1">Reply</a>
                    <a asp-action="DeleteEnquiry" asp-controller="home"
                       asp-route-id="@enquiry.ID"
                       class="btn btn-danger m-1">Delete</a>
                    @*<a href="#" class="btn btn-danger m-1">Delete</a>*@
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No Enquiry asked yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to go back
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="home" asp-action="index">
                Back
            </a>
        </div>
    </div>
}